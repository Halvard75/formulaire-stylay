<header>
    <div class="sign-in-header">
        <li>
            <%= render "devise/shared/links" %>
        </li>
    </div>
    <div class="edit-profile">
        <p>Already have an Intuit account?</p>
        <li>
            <%= link_to "I forgot my User ID or Password", edit_user_registration_path  %>
        </li>
    </div>

</header>


    <div class="center-title">
    </div>
 <div class="bloc-center">   
    <div class="logo-bloc">
        <%= image_tag(
  "icones.png", 
  :width => 250, :height => 20) %>
    </div>
    <hr>
    <div class="one-account">
        <h4>One Account.<br>Everything Intuit.</h4>
        <p>Create an account for all of Intuit's<br>products including Mint. <a href="https://accounts-help.lc.intuit.com/questions/1582580-creating-an-account"> Learn more</a></p>
    </div>
        

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    


    <div class="field email-box">
        <%= f.label :email, 'Email address' %><br />
        <%= f.email_field :email, autofocus: true %>
    </div>
    
    <div class="field phone-box">
        <%= f.label :phone, 'Phone (recommended)' %><br />
        <%= f.text_field :phone %>
    </div>
     <div class="field text-re">
        <p>Standard call, messaging or data rates may apply.</p>
     </div>

    <div class="field pass-box">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
    </div>

      <div class="actions creat-btn">
        <%= f.submit "Create Account" %>
      </div>
     <div class="field clicking">
        <p>By clicking Create Account, you agree to our<br><a href="https://www.mint.com/terms">License</a> Agreement and <a href="https://security.intuit.com/privacy">Privacy Statement.</a></p>
     </div>
    <% end %>

</div>


